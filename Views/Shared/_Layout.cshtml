<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LokwaInnovation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/font-awesome-4.7.0/font-awesome-4.7.0/css/font-awesome.css" />
    <link href="~/css/cards.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  fixed-top " style="background-color: #ed563b;margin-bottom:0px;border-bottom:none">
            <div class="container">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-tint" aria-hidden="true"></i>&nbsp;Dashboard</a>
                <button class="navbar-toggler text-light" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars text-light" aria-hidden="true"></i>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-globe" aria-hidden="true"></i>&nbsp;Website</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-usd" aria-hidden="true"></i>&nbsp;M-PESA</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="PDF_Documents" asp-action="create"><i class="fa fa-file-text-o" aria-hidden="true"></i>&nbsp;Documents</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-users" aria-hidden="true"></i>&nbsp;Clients</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-comments-o" aria-hidden="true"></i>&nbsp;FAQs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-commenting-o" aria-hidden="true"></i>&nbsp;Messages</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        @*<div class="container-fluid fixed-top" style="background-color: #ed563b;height:40px;background-color: #ed563b;margin-top:40px;padding:unset" ba>
            <div style="        width: 100%;
        height: 30px;
        margin-top: 20px;
        background-color: white;
        border-top-left-radius: 30px;
        border-top-right-radius: 30px;"></div>*@

   
    </header>
    <div class="container-fluid" style="margin-top:120px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.0.943/pdf.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    @RenderSection("Scripts1", required: false)
    @RenderSection("Scripts5", required: false)
    @RenderSection("scripts23", required: false)
    @RenderSection("pdf", required: false)

</body>
</html>
