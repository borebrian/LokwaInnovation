@Layout = "~/Views/Shared/_Layout.cshtml";
@model LokwaInnovation.Models.Log_in

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta name="description" content="">
<meta name="author" content="">
<link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap" rel="stylesheet">

<title>Lokwa Innovation</title>
<script src="~/CustomeJS/popper.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/templatemo-training-studio.css" rel="stylesheet" />
<link href="~/font-awesome-4.7.0/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />

<div class="row">
    <div class="col-lg-3">

    </div>
    <div class="col-lg-6">
        <h2>GET<em>IN</em>TOUCH</h2>
        <div class="card">
            <div class="card-header text-center text-white" style="background-color:#ed563b;
">
                Contacts us
            </div>
            <div class="card-body text-center">
                <div class="contact-form">
                    <form asp-action="Index">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                            <div class="col-md-6 col-sm-12">

                            </div>
                            <div class="col-md-6 col-sm-12">
                                <fieldset>
                                    <input asp-for="Phone_number" class="form-control" />
                                    <span asp-validation-for="Phone_number" class="text-danger"></span>
                                </fieldset>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <fieldset>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </fieldset>
                            </div>

                            <div class="col-lg-12">
                                <fieldset style="margin-top:15px">
                                    <button type="submit" class="main-button">Send Message</button>

                                    @if (ViewBag.Message != null)
                                    {

                                        <div class="alert alert-success">
                                            <strong>Success!</strong> &nbsp; @ViewBag.Message
                                        </div>}
                                    @*else
                                        {
                                            <div class="alert alert-danger">
                                                <strong>Error!</strong> &nbsp; @ViewBag.Message
                                            </div>
                                        }*@
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>

            </div>

        </div>

    </div>
    <div class="col-lg-3">

    </div>

</div>
