    <div class="row" id="call-to-action1">
        <div class="col-lg-4">

        </div>
        <div class="col-lg-4 ">

            <div class="card " style="margin: 15px;
        margin-top: 20px;border:none
">
                <div class="card-header text-center text-white" style="background-color:#ed563b;
">
                    Please log in to proceed
                </div>
                <div class="card-body text-center">
                    <div class="contact-form">
                        @using (Html.BeginForm("LoginUser", "Log_in", FormMethod.Post, new { role = "form" }))
            {
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">

                            <div class="col-md-12 col-sm-12">
                                <fieldset>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend text-light">
                                            <span class="input-group-text text-light" style="        background-color: #ed563b
"><i class="fa fa-phone" aria-hidden="true"></i></span>
                                        </div>

                                        @Html.TextBoxFor(m => m.Phone_number, new { @class = "form-control txtbox", @placeholder = "Phone number" })
                                    </div>
                                </fieldset>
                                <span asp-validation-for="Phone_number" class="text-danger"></span>

                            </div>
                            <div class="col-md-12 col-sm-12">
                                <fieldset>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend text-light">
                                            <span class="input-group-text text-light" style="background-color: #ed563b
"><i class="fa fa-unlock" aria-hidden="true"></i></span>
                                        </div>


                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control txtbox", @placeholder = "Password"   })
                                    </div>
                                </fieldset>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="col-lg-12">
                                <fieldset style="margin-top:15px">
                                    <div class="btn-group-sm">
                                        <button type="submit" class="main-button" style="border-radius:25px;"><i class="fa fa-user-circle" aria-hidden="true"></i>&nbsp;Log in</button> <a href="/Log_in/Create" class="main-button " style="margin-right:15px;color: #ed563b
">&nbsp;&nbsp;Sign up &nbsp;&nbsp;<i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                                    </div>


                                    @*else
                {
                    <div class="alert alert-danger">
                        <strong>Error!</strong> &nbsp; @ViewBag.Message
                    </div>
                }*@
                                </fieldset>
                            </div>
                            <div class="col-lg-12 text-center" style="margin-top:15px;">
                                <a href style="color: #ed563b
">Forgot password?</a>

                            </div>
                            @if (ViewBag.Message != null)
                            {

                                <div class="alert alert-success">
                                    <strong>Success!</strong> &nbsp; @ViewBag.Message
                                </div>}

                            @if (TempData["Error"] != null)
                            {

                                <div class="alert alert-danger">
                                    <strong>Error!</strong> &nbsp; @TempData["Error"]
                                </div>}

                        </div>
}
                    </div>

                </div>

            </div>

        </div>
        <div class="col-lg-4">

        </div>

    </div>


