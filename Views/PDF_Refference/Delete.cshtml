@model Lubes.Models.PDF_Refference

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb card-1">
    <ol class="breadcrumb">
        <li class="breadcrumb-item "><a asp-action="Dashboard" asp-controller="Home" class="color">Dashboard</a></li>
        <li class="breadcrumb-item"><a  class="color">Refferences</a></li>
    
        <li class="breadcrumb-item active" aria-current="page"><span class="badge badge-pill badge-dark">Delete</span></li>
    </ol>
</nav>
<div>
    <div class="col-12 mt-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h5><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>&nbsp;&nbsp;Delete</h5>

                <h6>Are you sure you want to delete this PDF refference?</h6>
            </div>
            <div class="card-horizontal">
                <div class="img-square-wrapper">
                    <img class="im" src="/@Html.DisplayFor(model => model.Refference_url)" style="        height: 150px;
        width: 150px;
        object-fit: cover
" alt="Card image cap">
                </div>
                <div class="card-body">
                    <h6 class="card-title">@Html.DisplayFor(model => model.Description)</h6>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ID" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="PDF_Content"  asp-controller="PDF_Documents" asp-route-id="@Model.Doc_id" class="btn btn-primary">No</a>
                    </form>
                </div>
</div>

</div>
</div>



</div>
