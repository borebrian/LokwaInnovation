
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<meta name="theme-color" content=" #ed563b">
<!-- Windows Phone -->
<meta name="msapplication-navbutton-color" content="#ed563b">
<!-- iOS Safari -->
<meta name="apple-mobile-web-app-status-bar-style" content="#ed563b">

<div class="row">
    <div class="col-3 d-none d-lg-block">
        <div class="card customeshadow" style="height:390px;border-radius:4px;">
            <div class="card-header text-light" style="        background-color: #ed563b;
        border: none;
        border-top-left-radius: 4px;
        border-top-right-radius: 4px">
                <h6><i class="fa fa-bars" aria-hidden="true"></i> &nbsp;&nbsp;|&nbsp;&nbsp;Account balance</h6>
            </div>
            <div class="card-header text-muted">
                <h6>Balance&nbsp;&nbsp;|&nbsp;&nbsp;507898</h6>
            </div>
            <div class="card-header">
                <a class="btn  text-right text-white text-center" asp-area="" asp-controller="Item_category" asp-action="Create" style="        font-size: 20px;
        width: 100%;
        background-color: #007b5e
">Withdraw&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
            </div>
            <div class="card-header text-muted">
                <h6>Todays transaction:&nbsp;&nbsp;|&nbsp;&nbsp;507898</h6>
            </div>
            <div class="card-header text-muted">
                <h6>Online users:&nbsp;&nbsp;|&nbsp;&nbsp;97</h6>
            </div>



            
        </div>
    </div>

    <div class="col-lg-8 ">
        <div class="row">
            <div class="col-lg-12">
                @if (TempData["warn"] != null)
                {
                <div class="alert alert-danger">
                    <strong><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>&nbsp;&nbsp;@TempData["warn"]</strong>

                </div>
                }
            </div>
        </div>
        



        <div class="row" style="margin-top:6px;">


            <div class="col-lg-4">


                <div class="image-flip">
                    <div class="mainflip flip-0">
                        <div class="frontside">
                            <div class="card customeshadow">
                                <div class="card-body text-left">
                                    <p><img src="~/images/System/documents.png" style="height:40px;width:40px;"></p>

                                    <h4 class="card-title">Documents</h4>
                                    <p class="card-text"> @ViewBag.docs&nbsp;<a  class="card-title-custome" asp-action="index" asp-controller="PDF_Documents">More details &nbsp;<i class="fa fa-arrow-right" aria-hidden="true"></i></a></p>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <div class="col-lg-4">


                <div class="image-flip">
                    <div class="mainflip flip-0">
                        <div class="frontside">
                            <div class="card customeshadow">
                                <div class="card-body text-left">
                                    <img src="~/images/System/users.png" alt="card image" style="height:40px;width:40px;">
                                    <h4 class="card-title">Clients</h4>
                                    <p class="card-text">@ViewBag.clients&nbsp;<a href="" class="card-title-custome">More details &nbsp;<i class="fa fa-arrow-right" aria-hidden="true"></i></a></p>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <div class="col-lg-4">


                <div class="image-flip">
                    <div class="mainflip flip-0">
                        <div class="frontside">
                            <div class="card customeshadow">
                                <div class="card-body text-left">

                                    @if (@ViewBag.messages == "0")
                                    {

                                        <p><img class="img-fluid" src="~/images/System/messages.png" alt="card image" style="height:40px;width:40px;"></p>
                                    }
                                    else
                                    {
                                        <p><img class="img-fluid" src="~/images/System/messagesNew.png" alt="card image" style="height:40px;width:40px;"></p>
                                    }

                                    <h4 class="card-title">Messages</h4>
                                    <p class="card-text">@ViewBag.messages &nbsp;<a asp-action="index" asp-controller="Contacts" class="card-title-custome">More details &nbsp;<i class="fa fa-arrow-right" aria-hidden="true"></i></a></p>

                                </div>
                                @*<div class="card-body text-left">
                                    <p><img class="img-fluid" src="~/images/System/messagesNew.png" alt="card image" style="height:40px;width:40px;"></p>
                                    <h4 class="card-title">Messages</h4>
                                    <p class="card-text">67</p>*@

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-lg-4">


                <div class="image-flip">
                    <div class="mainflip flip-0">
                        <div class="frontside">
                            <div class="card customeshadow">
                                <div class="card-body text-left">
                                    <p><img class="img-fluid" src="~/images/System/faq.png" alt="card image" style="height:40px;width:40px;"></p>
                                    <h4 class="card-title">FAQs</h4>
                                    <p class="card-text">@ViewBag.faqs&nbsp; <a href="" class="card-title-custome">More details &nbsp;<i class="fa fa-arrow-right" aria-hidden="true"></i></a></p>

                                </div>
                                @*<div class="card-body text-left">
                                    <p><img class="img-fluid" src="~/images/System/messagesNew.png" alt="card image" style="height:40px;width:40px;"></p>
                                    <h4 class="card-title">Messages</h4>
                                    <p class="card-text">67</p>*@

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-lg-4">


                <div class="image-flip">
                    <div class="mainflip flip-0">
                        <div class="frontside">
                            <div class="card customeshadow">
                                <div class="card-body text-left">
                                    <p><img class="img-fluid" src="~/images/System/visits.png" alt="card image" style="height:40px;width:40px;"></p>
                                    <h4 class="card-title">Website visits</h4>
                                    <p class="card-text">@ViewBag.Visits &nbsp; <a asp-action="Visits" asp-controller="home" class="card-title-custome">More details &nbsp;<i class="fa fa-arrow-right" aria-hidden="true"></i></a></p>

                                </div>
                                @*<div class="card-body text-left">
                                    <p><img class="img-fluid" src="~/images/System/messagesNew.png" alt="card image" style="height:40px;width:40px;"></p>
                                    <h4 class="card-title">Messages</h4>
                                    <p class="card-text">67</p>*@

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


 
</div>


