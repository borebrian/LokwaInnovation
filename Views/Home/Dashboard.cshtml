
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<meta name="theme-color" content="#68213A">
<!-- Windows Phone -->
<meta name="msapplication-navbutton-color" content="#68213A">
<!-- iOS Safari -->
<meta name="apple-mobile-web-app-status-bar-style" content="#68213A">

<div class="row">
    <div class="col-3 d-none d-lg-block">
        <div class="card" style="height:390px;border-radius:20px;">
            <div class="card-header text-light" style="background-color: #68213A;border:none;border-top-left-radius:10px;border-top-right-radius:10px">
                <h6><i class="fa fa-bars" aria-hidden="true"></i> &nbsp;&nbsp;|&nbsp;&nbsp;Quick menu</h6>
            </div>
            <div class="card-header"> <a class="btn btn-dark text-right" asp-area="" asp-controller="Add_item" asp-action="SubmitStock" style="font-size:10px;width:100%"> Submit sales&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<img src="/SystemImage/grid.png" style="height:20px;width:20px;" alt="" /></a></div>

            <div class="card-header"> <a class="btn btn-dark text-right" asp-area="" asp-controller="Item_category" asp-action="Create" style="font-size:10px;width:100%"> Add category&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<img src="/SystemImage/grid.png" style="height:20px;width:20px;" alt="" /></a></div>

            <div class="card-header"> <a class="btn btn-dark text-right" asp-area="" asp-controller="Add_item" asp-action="Create" style="font-size:10px;width:100%"> Add new item&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<img src="/SystemImage/grid.png" style="height:20px;width:20px;" alt="" /></a></div>
            <div class="card-header"> <a class="btn btn-dark text-right" asp-area="" asp-controller="Administration" asp-action="Log_Out" style="font-size:10px;width:100%">Log out&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<img src="/SystemImage/log_out.png" style="height:20px;width:20px;" alt="" /></a></div>
        </div>
    </div>

    <div class="col-lg-8 ">
        <div class="row">
            <div class="col-lg-12">
                @if (TempData["warn"] != null)
                {
                    <div class="alert alert-danger">
                        <strong><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>&nbsp;&nbsp;@TempData["warn"]</strong>

                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">


                <div class="scrolling-wrapper">
                    @{
                        if (ViewBag.JoinList != null)
                        {
                            @foreach (var item in ViewBag.JoinList)
                            {
                                <div class="card card-2">
                                    <div class="card-header text-left customeheader " style="background-image:url(/@item.ImageURL);background-repeat:no-repeat;background-size:cover">
                                        <h6 class="card-title textShadow" style="color:transparent;"> &nbsp;@item.Item_name</h6>
                                    </div>
                                    <div class="card-body customebody " style="        font-size: 20px;
        color: #68213A;
">
                                        <div class="row">
                                            <div class="col-lg-12 col-12 text-left" style="font-size:10px;">

                                                <h6 class="card-title textShadow"> &nbsp;@item.Item_name</h6>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6 col-6 text-left" style="font-size:10px;">

                                                Ksh.  @item.Item_price

                                            </div>
                                            <div class="col-lg-6 col-6 text-right" style="font-size:10px;">


                                                @item.Quantity
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            }}
                    }
                </div>
            </div>
        </div>



        <div class="row" style="margin-top:6px;">


            <div class="col-lg-4">


                <div class="image-flip">
                    <div class="mainflip flip-0">
                        <div class="frontside">
                            <div class="card customeshadow">
                                <div class="card-body text-left">
                                    <p><img src="~/images/System/documents.png" style="height:40px;width:40px;"></p>

                                    <h4 class="card-title">Documents</h4>
                                    <p class="card-text"> @ViewBag.Itemcount</p>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <div class="col-lg-4">


                <div class="image-flip">
                    <div class="mainflip flip-0">
                        <div class="frontside">
                            <div class="card customeshadow">
                                <div class="card-body text-left">
                                    <img src="~/images/System/users.png" alt="card image" style="height:40px;width:40px;">
                                    <h4 class="card-title">Clients</h4>
                                    <p class="card-text">@ViewBag.categoryCount</p>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
            <div class="col-lg-4">


                <div class="image-flip">
                    <div class="mainflip flip-0">
                        <div class="frontside">
                            <div class="card customeshadow">
                                <div class="card-body text-left">
                                    <p><img class="img-fluid" src="~/images/System/messages.png" alt="card image" style="height:40px;width:40px;"></p>
                                    <h4 class="card-title">Messages</h4>
                                    <p class="card-text">67</p>

                                </div>
                                @*<div class="card-body text-left">
                            <p><img class="img-fluid" src="~/images/System/messagesNew.png" alt="card image" style="height:40px;width:40px;"></p>
                            <h4 class="card-title">Messages</h4>
                            <p class="card-text">67</p>*@

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-lg-4">


                <div class="image-flip">
                    <div class="mainflip flip-0">
                        <div class="frontside">
                            <div class="card customeshadow">
                                <div class="card-body text-left">
                                    <p><img class="img-fluid" src="~/images/System/faq.png" alt="card image" style="height:40px;width:40px;"></p>
                                    <h4 class="card-title">FAQs</h4>
                                    <p class="card-text">67</p>

                                </div>
                                @*<div class="card-body text-left">
                            <p><img class="img-fluid" src="~/images/System/messagesNew.png" alt="card image" style="height:40px;width:40px;"></p>
                            <h4 class="card-title">Messages</h4>
                            <p class="card-text">67</p>*@

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-lg-4">


                <div class="image-flip">
                    <div class="mainflip flip-0">
                        <div class="frontside">
                            <div class="card customeshadow">
                                <div class="card-body text-left">
                                    <p><img class="img-fluid" src="~/images/System/visits.png" alt="card image" style="height:40px;width:40px;"></p>
                                    <h4 class="card-title">Website visits</h4>
                                    <p class="card-text">67 &nbsp; <a href="" class="card-title-custome">More details &nbsp;<i class="fa fa-arrow-right" aria-hidden="true"></i></a></p>

                                </div>
