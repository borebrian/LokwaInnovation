@model IEnumerable<LokwaInnovation.Models.Contacts>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/chart.css" rel="stylesheet" />
<nav aria-label="breadcrumb card-1">
    <ol class="breadcrumb">
        <li class="breadcrumb-item "><a asp-action="Dashboard" asp-controller="Home" class="color">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Visits" asp-controller="Home" class="color">Chats</a></li>

    </ol>
</nav>
@foreach (var item in Model)
{
    <div class="card card-1 m-1" style="border-radius:20px;">
        <div class="row">
            <div class="col-lg-2 col-md-2 col-sm-2 col-2 pt-2 " style="border-right-color:red; border-right:2px solid red;">

                <img src="/images/System/anonymous.png" class="rounded-circle anonymous mr-2" />
            </div>

            <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-12 ">
                        <strong style="font-size:11px" class="color"> @Html.DisplayFor(modelItem => item.Full_name)</strong><br />
                        <strong> @Html.DisplayFor(modelItem => item.Subject)</strong><br />
                        <strong class="color"> @Html.DisplayFor(modelItem => item.Message)</strong><br />
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-4 pt-3 ">
                <a href class="p-2" style="        background-color: #ed563b;color:white;border-radius:20px;">Reply &nbsp;<i class="fa fa-paper-plane" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>

}
